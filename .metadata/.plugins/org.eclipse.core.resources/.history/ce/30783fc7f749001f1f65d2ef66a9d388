#include "GPIO.h"
#include "LCD/LCD.h"
#include "KEYPAD/KEYPAD.h"
#include "EXTI/EXTI.h"
#include "USART/USART.h"
// =========================================================================================================

int main(void)
{
    // Enable clocks for GPIO ports and AFIO
    RCC_GPIOA_CLK_EN();
    RCC_GPIOB_CLK_EN();
    RCC_GPIOC_CLK_EN();
    RCC_AFIO_CLK_EN();

    // UART configuration structure
    USART_Config_t _uart1;
    _uart1.BaudRate = UART_BaudRate_9600;
    _uart1.HwFlowCtl = UART_HwFlowCtl_NONE;
    _uart1.Parity = UART_Parity__NONE;
    _uart1.Payload_Length = UART_Payload_Length_8B;
    _uart1.StopBits = UART_StopBits__1;
    _uart1.USART_Mode = UART_MODE_TX_RX;
    _uart1.IRQ_Enable = UART_IRQ_Enable_NONE;

    // Initialize USART1 with the configuration
    MCAL_UART_Init(USART1, &_uart1);
    MCAL_UART_GPIO_Set_Pins(USART1);

    // Variable to store received UART data
    uint8 uart_val;

    /* Loop forever */
    while(1)
    {
        // Receive data from USART1
        MCAL_UART_ReceiveData(USART1, &uart_val, USART_enable);

        // Send the received data back (echo)
        MCAL_UART_SendData(USART1, uart_val, USART_enable);
    }
}
